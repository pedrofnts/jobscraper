# Banco de Dados
DB_USER=jobscraper_user
DB_PASSWORD=change_this_password
DB_NAME=jobscraper
DB_HOST=db
DB_PORT=5432

# Servidor
PORT=3004
NODE_ENV=production

# Puppeteer
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutos em milissegundos
RATE_LIMIT_MAX=100

# Logs
LOG_LEVEL=info  # Opções: error, warn, info, debug

# Métricas
METRICS_ENABLED=true

# Segurança
JWT_SECRET=change_this_secret_key

# Configurações Opcionais
# Descomente e ajuste conforme necessário

# Tempo máximo de espera para requisições (ms)
# REQUEST_TIMEOUT=30000

# Configurações de Retry
# RETRY_ATTEMPTS=3
# RETRY_DELAY=5000

# Configurações de Cache
# CACHE_TTL=300
# CACHE_CHECK_PERIOD=320

# Configurações de Limpeza
# CLEANUP_SCHEDULE="0 0 * * *"  # Todo dia à meia-noite
# CLEANUP_DAYS=30  # Remove registros mais antigos que 30 dias

# Configurações de Debug
# DEBUG=false
# DEBUG_PUPPETEER=false 